<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.Book1_Dao">
<select id="select" resultType="model.Book" parameterType="java.lang.String">  <!-- resultType:返回结果;parameterType:传进来的参数类型 -->
select book.*,type.name typename from book inner join type on type.id=book.typeid ${_parameter}
</select>
<select id="selectById" resultType="model.Book" parameterType="int">
select* from book where id=#{id}
</select>
<select id="insert" parameterType="model.Book">
insert into book(name,sex,typeid) values(#{name},#{sex},#{typeid})
</select>
<select id="delete" parameterType="int">
delete from book where id=#{id}
</select>
<select id="update" parameterType="model.Book">
update book set name=#{name},sex=#{sex},typeid=#{typeid} where id=#{id}
</select>
</mapper>